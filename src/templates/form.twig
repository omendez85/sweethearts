<div class="form-container form-test">
    <form class="" action="#" method="post">
        <div class="row field-container">
            <div class="column-20">
                <h3 data-lang="labelAge">Age</h3>
            </div>
            <div class="column input-container">
                <input type="range" class="range" name="age" min="10" max="80" value="25">
            </div>
        </div>

        <div class="row field-container favorite-color">
            <div class="column-20">
                <h3 data-lang="labelFavColor">Favorite Color</h3>
            </div>
            <div class="column-80 input-container">
                <div class="radio-container">
                    <input type="radio" class="favColor-1" id="favColor-1" class="radio" name="favColor" value="1" >
                    <label for="favColor-1" data-lang="favColor1">Blue</label>
                </div>
                <div class="radio-container">
                    <input type="radio" class="favColor-2" id="favColor-2" class="radio" name="favColor" value="2" >
                    <label for="favColor-2" data-lang="favColor2">Pink</label>
                </div>
                <div class="radio-container">
                    <input type="radio" class="favColor-3" id="favColor-3" class="radio" name="favColor" value="3" >
                    <label for="favColor-3" data-lang="favColor3">Yellow</label>
                </div>
                <div class="radio-container">
                    <input type="radio" class="favColor-4" id="favColor-4" class="radio" name="favColor" value="4" >
                    <label for="favColor-4" data-lang="favColor4">White</label>
                </div>
                <div class="radio-container">
                    <input type="radio" class="favColor-5" id="favColor-5" class="radio" name="favColor" value="5" >
                    <label for="favColor-5" data-lang="favColor5">Green</label>
                </div>
            </div>
        </div>


        <div class="row field-container eyes-color">
            <div class="column-20">
                <h3 data-lang="labelEyesColor">Eyes Color</h3>
            </div>
            <div class="column-80 input-container">
                <div class="radio-container">
                    <input type="radio" class="favEyesColor-1" id="favEyesColor-1" class="radio" name="favEyescolor" value="1" >
                    <label for="favEyesColor-1" data-lang="favEyesColor1">Blue</label>
                </div>
                <div class="radio-container">
                    <input type="radio" class="favEyesColor-2" id="favEyesColor-2" class="radio" name="favEyescolor" value="2" >
                    <label for="favEyesColor-2" data-lang="favEyesColor2">Brown</label>
                </div>
                <div class="radio-container">
                    <input type="radio" class="favEyesColor-3" id="favEyesColor-3" class="radio" name="favEyescolor" value="3" >
                    <label for="favEyesColor-3" data-lang="favEyesColor3">Green</label>
                </div>
            </div>
        </div>

        <div class="row field-container hair-selector">
            <div class="column-20">
                <h3 data-lang="labelHair">Hair</h3>
            </div>
            <div class="column-80 input-container">
                <div class="radio-container text-center">
                    <input type="radio" class="hair-1" id="hair-1" class="radio" name="hair" value="1" >
                    <label for="hair-1">
                        <img src="/assets/img/long.png" alt="">
                        <span data-lang="hair1">Long</span>
                    </label>
                </div>
                <div class="radio-container text-center">
                    <input type="radio" class="hair-2" id="hair-2" class="radio" name="hair" value="2" >
                    <label for="hair-2">
                        <img src="/assets/img/short.png" alt="">
                        <span data-lang="hair2">Short</span>
                    </label>
                </div>
                <div class="radio-container text-center">
                    <input type="radio" class="hair-3" id="hair-3" class="radio" name="hair" value="3" >

                    <label for="hair-3">
                        <img src="/assets/img/tied.png" alt="">
                        <span data-lang="hair3">Tied</span>
                    </label>
                </div>
            </div>
        </div>

        <div class="row field-container last">
            <div class="column text-center">
                <button type="submit" class="btn" name="button" data-lang="calcBtn">CALCULATE</button>
            </div>
        </div>
    </form>
</div>
